{
  "id": "rex-ai-assistant-app",
  "name": "Rex AI Assistant",
  "short_name": "Rex AI",
  "description": "Your intelligent AI assistant for productivity and task management. Chat with DeepSeek AI, manage todos, and boost productivity.",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#0f172a",
  "theme_color": "#6366f1",
  "orientation": "any",
  "scope": "/",
  "lang": "en-US",
  "dir": "ltr",
  "categories": ["productivity", "utilities", "business"],
  "prefer_related_applications": false,
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
