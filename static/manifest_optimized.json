  "screenshots": [
    {
      "src": "/static/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Rex AI Assistant Chat Interface"
    }
  ],
  "shortcuts": [
    {
      "name": "New Chat",
      "short_name": "Chat",
      "description": "Start a new conversation with Rex AI",
      "url": "/",
      "icons": [
        {
          "src": "/static/icon-192.png",
          "sizes": "192x192",
