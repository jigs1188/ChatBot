{
  "name": "Rex AI Assistant",
  "short_name": "Rex AI",
  "description": "Your intelligent AI assistant for productivity and task management. Chat with DeepSeek AI, manage todos, and boost productivity.",
  "start_url": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay"],
  "orientation": "any",
  "theme_color": "#6366f1",
  "background_color": "#0f172a",
  "scope": "/",
  "lang": "en-US",
  "dir": "ltr",
  "id": "rex-ai-assistant-app",
  "categories": ["productivity", "utilities", "business"],
  "prefer_related_applications": false,
  "handle_links": "preferred",
  
  "icons": [
    {
      "src": "https://rex-ai-assistant.vercel.app/static/icon-72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "https://rex-ai-assistant.vercel.app/static/icon-96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "https://rex-ai-assistant.vercel.app/static/icon-128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "https://rex-ai-assistant.vercel.app/static/icon-144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "https://rex-ai-assistant.vercel.app/static/icon-152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "https://rex-ai-assistant.vercel.app/static/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "https://rex-ai-assistant.vercel.app/static/icon-384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "https://rex-ai-assistant.vercel.app/static/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],

  "screenshots": [
    {
      "src": "https://rex-ai-assistant.vercel.app/static/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Rex AI Assistant Mobile Chat Interface"
    },
    {
      "src": "https://rex-ai-assistant.vercel.app/static/icon-512.png",
      "sizes": "512x512", 
      "type": "image/png",
      "form_factor": "wide",
      "label": "Rex AI Assistant Desktop Interface"
    }
  ],

  "shortcuts": [
    {
      "name": "New Chat",
      "short_name": "Chat",
      "url": "/",
      "description": "Start a new conversation with Rex AI",
      "icons": [
        {
          "src": "https://rex-ai-assistant.vercel.app/static/icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Todo Management",
      "short_name": "Todos",
      "url": "/?action=todos",
      "description": "Manage your tasks and todos",
      "icons": [
        {
          "src": "https://rex-ai-assistant.vercel.app/static/icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Analytics",
      "short_name": "Stats",
      "url": "/?action=analytics",
      "description": "View your productivity analytics",
      "icons": [
        {
          "src": "https://rex-ai-assistant.vercel.app/static/icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],

  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.rexai.assistant",
      "id": "com.rexai.assistant"
    }
  ],

  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "text/plain": [".txt", ".md"],
        "application/json": [".json"]
      }
    }
  ],

  "protocol_handlers": [
    {
      "protocol": "web+rexai",
      "url": "/?action=%s"
    }
  ],

  "launch_handler": {
    "client_mode": "focus-existing"
  },

  "edge_side_panel": {
    "preferred_width": 400
  }
}
